{
  "name": "vanilla-party",
  "version": "0.2.0",
  "author": "Luiz Bills",
  "license": "MIT",
  "description": "An easy to use library for simple multi-user JavaScript apps.",
  "keywords": [
    "multiuser",
    "multiplayer",
    "library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/luizbills/vanilla-party.git"
  },
  "files": [
    "src",
    "dist"
  ],
  "main": "dist/vanilla-party.js",
  "unpkg": "./dist/vanilla-party.js",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "dev": "npm run esbuild -- --outfile=samples/_dist/vanilla-party.js --servedir=samples",
    "start": "npm run esbuild -- --watch --outfile=public/dist/vanilla-party.js ",
    "test": "jest --coverage=false",
    "release": "np",
    "serve": "PORT=${PORT:-6020} deepstream start",
    "build": "npm run esbuild -- --outfile=dist/vanilla-party.js",
    "prepare": "npm run genversion && npm run build",
    "postpublish": "curl https://purge.jsdelivr.net/npm/vanilla-party@latest/dist/vanilla-party.js",
    "genversion": "genversion --es6 --semi version.js",
    "esbuild": "esbuild src/web.ts --bundle --sourcemap --minify --target=es6 --define:global=window --inject:esbuild.inject.js --loader:.css=text"
  },
  "dependencies": {
    "@deepstream/client": "^7.0.5",
    "on-change": "^5.0.1",
    "reefjs": "^13.0.6",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@deepstream/server": "^9.1.1",
    "@types/jest": "^29.5.14",
    "@types/reefjs": "^7.6.5",
    "esbuild": "^0.25.5",
    "genversion": "^3.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
